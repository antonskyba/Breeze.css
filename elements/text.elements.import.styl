/*
 * Apply custom font family to <pre> and phrase elements.
 */

pre,
code,
kbd,
samp
  font-family $font-family-monospace


/*
 * Set small font size to small text elements.
 */

sup,
sub,
small,
figcaption
  font-size $font-size-sm