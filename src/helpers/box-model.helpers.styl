/* ==========================================================================
   BOX-MODEL
   ========================================================================== */

/*
 * Utility classes to put specific box-model values (margin, padding, height,
 * width) onto elements.
 */





/* Margin and Padding
   ========================================================================== */

/*
 * The below code will generate a suite of classes like:
 *
 *   .h-margin-bottom
 *   .h-margin-right--xl
 *   .h-margin-top--auto
 *   .h-margin--auto
 *   .h-padding-top--sm
 *   .h-padding
 *   .h-padding--0
 */

$spacing-properties = {
  'margin':  'margin',
  'padding': 'padding'
}

$spacing-directions = {
  '-top':    '-top',
  '-right':  '-right',
  '-bottom': '-bottom',
  '-left':   '-left',
  '':        ''
}

$spacing-sizes = {
  '--auto': auto,
  '--4s':   $unit-4s,
  '--3s':   $unit-3s,
  '--2s':   $unit-2s,
  '--xs':   $unit-xs,
  '--sm':   $unit-sm,
  '':       $unit,
  '--lg':   $unit-lg,
  '--xl':   $unit-xl,
  '--2x':   $unit-2x,
  '--3x':   $unit-3x,
  '--4x':   $unit-4x,
  '--0':    0
}

for $property, $property-name in $spacing-properties
  
  for $direction, $direction-name in $spacing-directions
    
    for $size, $value in $spacing-sizes
    
      unless $property-name is 'padding' and $value is 'auto'
        .h-{$property}{$direction}
          &{$size}
            {$property-name}{$direction-name}: $value !important





/* Width and Height
   ========================================================================== */

.h-width-100
  width 100% !important
  
.h-height-100
  height 100% !important