/*
 * Set color to placeholder and label.
 */

+placeholder()
  color $placeholder-color

label
  color $placeholder-color


/*
 * Truncate text to the width of <input> field using ellipsis.
 */

input[placeholder]
  text-overflow ellipsis


/*
 * Let the user resize only the height of <textarea> element.
 */

textarea
  resize vertical